generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TipoAusencia {
  FERIAS 
  ATESTADO 
  LICENCA
  OUTRO
}

enum TipoTurno {
  Matutino
  Vespertino
}

enum TipoFeriado {
  Nacional
  Estadual
  Municipal
  Regional
  Institucional
}

model Funcionarios{
  id Int @id @default(autoincrement())
  adm Boolean @default(false)
  primeiraEntrada Boolean @default(false)
  cpf String @unique
  matricula String 
  nome String
  cargo String 
  turno TipoTurno
  empresa String
  senha String 
  horarios Horarios[]
  ausencia Ausencias[]
}

model Horarios{
  id Int @id @default(autoincrement())
  dataCriada String 
  entrada String
  saida String? 
  id_funcionario Int 
  funcionarios  Funcionarios @relation(fields: [id_funcionario], references: [id])
}

model Feriados{
  id Int @id @default(autoincrement())
  nome String 
  tipoFeriado TipoFeriado
  dataInicio String
  dataFim String
  nacional Boolean 
}

model Ausencias{
  id Int @id @default(autoincrement())
  tipoAusencia TipoAusencia 
  dataInicio String
  dataFim String 
  id_funcionario Int
  funcionarios Funcionarios @relation(fields: [id_funcionario], references: [id])
}

