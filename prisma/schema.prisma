generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TipoAusencia {
  FERIAS 
  ATESTADO 
  LICENCA
  OUTRO
}

model Funcionarios{
  id Int @id @default(autoincrement())
  adm Boolean @default(false)
  primeiraEntrada Boolean @default(false)
  cpf String @unique
  matricula String 
  nome String
  cargo String 
  turno String
  empresa String
  senha String 
  horarios Horarios[]
  ausencia Ausencia[]
}

model Horarios{
  id Int @id @default(autoincrement())
  dataCriado String 
  entrada String
  saida String? 
  id_funcionario Int 
  funcionarios  Funcionarios @relation(fields: [id_funcionario], references: [id])
}

model Feriados{
  id Int @id @default(autoincrement())
  nome String 
  dataInicio String
  dataFim String?
  nacional Boolean 
}

model Ausencia{
  id Int @id @default(autoincrement())
  tipoAusencia TipoAusencia 
  dataInicio String
  dataFim String? 
  id_funcionario Int
  funcionarios Funcionarios @relation(fields: [id_funcionario], references: [id])
}

