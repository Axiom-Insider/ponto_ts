generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}



model Funcionarios{
  id Int @id @default(autoincrement())
  adm Boolean @default(false)
  primeiraEntrada Boolean @default(false)
  matricula Int @unique
  nome String
  cargo String 
  senha String 
  horarios Horarios[]
  ausencia Ausencia[]
}

model Horarios{
  id Int @id @default(autoincrement())
  dataCriado DateTime @default(now())
  data String 
  entrada Boolean @default(true)
  saida Boolean @default(false)
  hora_entrada String
  hora_saida String? 
  id_funcionario Int 
  funcionarios  Funcionarios @relation(fields: [id_funcionario], references: [id])
}

model Feriados{
  id Int @id @default(autoincrement())
  nome String 
  data String
  dataSec String
  nacional Boolean 
}

model Ausencia{
  id Int @id @default(autoincrement())
  ferias Boolean 
  atestado Boolean 
  data_entrada String
  data_saida String 
  id_funcionario Int
  funcionarios Funcionarios @relation(fields: [id_funcionario], references: [id])
}

